---
import CopyEmail from "./copyEmail.astro"
let today = new Date("2024-06-08"); 
const dateOfBirth = new Date("2003-06-07"); 

let month = today.getMonth() - dateOfBirth.getMonth();
let day = today.getDate() - dateOfBirth.getDate();
let edad = today.getFullYear() - dateOfBirth.getFullYear();

if (month < 0 || (month === 0 && day < 0)) {
    edad--;
}
---
<section id="home" class="all">
    <div class="presentation">
        <h2 class="category">Software Developer</h2>
        <div class="content-isAvailable">
            <h1 class="fullname">Joaquin Sanchez Tonani</h1>
            <button class="button-85 preview-button">Available for hire</button>
        </div>
    </div>
    <div class="description">
        <!--<p class="phrase">"Programming isn’t about what you know; it’s about what you can figure out."</p-->
        <!--img src="https://joaquinsanton.netlify.app/assets/profile-d1673825.jpg" alt="joaquin photo"-->
        <p class="about">
            I’m <span class="important-words">{edad} years old</span> and specialize as a <span class="important-words">software developer</span>.
            Currently <span class="important-words">studying programming at a technical university</span>.
            While I don’t have professional experience yet, I’ve <span class="important-words">dedicated over 3 years to learning and improving my skills</span>.
            I’m eager to apply my knowledge and contribute to real-world projects.
        </p>
        <div class="links">
            <div>
                <a target="_blank" class="description-a" href="https://github.com/Joaquin-Sanchez-Tonani"><i class="fa-brands fa-github"></i>Github</a>
                <a target="_blank" class="description-a" href="https://www.linkedin.com/in/joaquin-dario-sanchez-tonani-ba7117272/"><i class="fa-brands fa-linkedin"></i>Linkedin</a>
                <a target="_blank" class="description-a" href="https://leetcode.com/u/FazSuS3gAv/"><i class="fa-solid fa-code"></i>LeetCode</a>
            </div>
            <div>
                <a target="_blank" class="description-a" href="https://drive.google.com/file/d/1cWvhHLlRYZVG9_Gx5ou41TRcrS5Lc7OS/view?usp=sharing"><i class="fa-solid fa-download"></i>Download CV</a>
                <CopyEmail />
            </div>
        </div>
    </div>
    <a aria-label="go next section" class="dale" href="#formation"><i class="arrow fa-solid fa-arrow-down"></i></a>
</section>

<style>
    
    .dale{
        display: flex;
        justify-content: center;
    }
    .arrow{
        position: absolute;
        bottom: 5dvh;
        font-size: 50px;
        animation: movement 3s infinite;
    }
    @keyframes movement {
        0%{
            transform: translateY(0);
        }
        50%{
            transform: translateY(-15px);
        }
        100%{
            transform: translateY(0);
        }
    }
    img{
        width: 100px;
    }
    .all{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100dvh;
        gap: 20px;
        position: relative;
    }
    .presentation{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: left;
        width: 100%;
        gap: 10px;
    }
    .cv{
        padding: 3px 10px;
        border-radius: 10px;
        background-color: var(--accent-color);
        border: 1px solid white;
    }
    .category{
        font-size: 50px;
        color: var(--secondary-color);
    }
    .fullname{
        font-size: 60px;
        color: rgb(235, 234, 234);
    }

    .content-isAvailable{
        display: flex;
        align-items: center;
        gap: 20px;
        margin-top: -20px;
    }
    .isAvailable{
        color: rgb(255, 255, 255);
        font-size: 15px;
        white-space: nowrap;
        margin: 0;
        padding: 3px 15px;
        border-radius: 15px;
        animation: goldenGlow 3s linear infinite;
    }

    .description{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: left;
        text-align: left;
        width: 100%;
        gap: 15px;
    }
    .description div{
        display: flex;
        gap: 15px;
    }
    .description-a{
        background-color: rgba(97, 97, 97, 0.084);
        color: rgb(140, 140, 140);
        border: 1px solid rgb(140, 140, 140);
        font-size: 18px;
        padding: 8px 15px;
        border-radius: 15px;
        box-shadow: 1px 3px 5px rgba(255, 255, 255, 0.2);
        transition: .5s;
        gap: 10px;
        display: flex;
        align-items:center;
        justify-content: space-between;
    }
    .description-a:hover{
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
        transition: .5s;
        box-shadow: 3px 5px 7px rgba(255, 255, 255, 0.4);
    }
    .about{
        font-size: 18px;
        color: var(--normal-text);
    }
    .description img{
        background-color: var();
        height: 170px;
        width: 170px;
    }
    .important-words{
        color: rgba(155, 169, 240, 0.784);
    }
    .links{
        display: flex;
        justify-content: space-between;
    }

    .button-85 {
    padding: 0.6em 2em;
    border: none;
    outline: none;
    color: rgb(231, 231, 231);
    background: #111;
    cursor: pointer;
    position: relative;
    z-index: 0;
    border-radius: 10px;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
    transition: .5s;
    }

    .button-85:before {
    content: "";
    background: linear-gradient(
        45deg,
        var(--accent-color),
        var(--secondary-color)

    );
    position: absolute;
    top: -2px;
    left: -2px;
    background-size: 400%;
    z-index: -1;
    filter: blur(5px);
    -webkit-filter: blur(5px);
    width: calc(100% + 4px);
    height: calc(100% + 4px);
    animation: glowing-button-85 10s linear infinite;
    transition: opacity 0.3s ease-in-out;
    border-radius: 10px;
    }

    @keyframes glowing-button-85 {
    0% {
        background-position: 0 0;
    }
    50% {
        background-position: 400% 0;
    }
    100% {
        background-position: 0 0;
    }
    }

    .button-85:after {
        z-index: -1;
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        background: #222;
        left: 0;
        top: 0;
        border-radius: 10px;
    }
    .button-85:hover{
        color: var(--primary-color);
        transition: .5s;
    }

    .preview-button {
        background-color: #333; 
        padding: 10px 20px; 
        border: none; 
        border-radius: 8px; 
        cursor: pointer; 
        font-size: 16px; 
    }

    .content-preview:hover .preview-image {
        width: 500px;
        transition: .5s;
        opacity: 1;
    }   
    .content-preview{
        position: relative;
        z-index: 9999;
    }
	@media (min-width:980px) and (max-width: 1200px) {
		.fullname{
            font-size: 40px;
        }
        .category{
            font-size: 30px;
        }
        .about{
            font-size: 16px;
        }
        .preview-button{
            font-size: 12px;
            padding: 6px 12px;
        }
        .description-a{
            font-size: 15px;
            padding: 5px 12px;
        }
	}
    @media (min-width: 500px) and (max-width: 980px) {
        .description-a{
            font-size: 15px;
            padding: 5px 12px;
            gap: 5px;
        }
        .fullname{
            font-size: 30px;
        }
        .category{
            font-size: 20px;
        }
        .about{
            font-size: 15px;
        }
        .preview-button{
            font-size: 10px;
        }
        .links{
            justify-content: left;
        }
        .description div{
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .all{
            gap: 5px;
        }
        .arrow{
            font-size: 30px;
        }
        .content-isAvailable{
            margin-top: -15px;
        }
    }
    @media (max-width: 500px) {
        .fullname{
            font-size: 25px;
        }
        .category{
            font-size: 20px;
        }
        .about{
            font-size: 15px;
        }
        .preview-button{
            font-size: 8px;
            padding: 3px 7px;
        }
        .description div{
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }
        .all{
            gap: 5px;
        }
        .arrow{
            font-size: 20px;
        }
        .content-isAvailable{
            margin-top: -10px;
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
        }
        .description-a{
            font-size: 12px;
            gap: 5px;
        }
    }
</style>