---
const email = "joaquinsancheztonani15@gmail.com"
---

<div class="content" id="copy">
    <button class="copy-button" ><i class="fa-solid fa-copy"></i></button>
    <p class="email-text" id="email">{email}</p>
</div>

<div id="notification" class="notification hidden">
    <p>Email copied to clipboard!</p>
</div>

<script>
    function copyEmail() {
        const email2 = document.getElementById("email").textContent;
        navigator.clipboard.writeText(email2)
            .then(() => {
                showNotification();
            })
            .catch((error) => {
                console.error('Failed to copy: ', error);
            });
    }

    function showNotification() {
        const notification = document.getElementById("notification");
        notification.classList.remove("hidden");
        setTimeout(() => {
            notification.classList.add("hidden");
        }, 3000); // La notificación desaparece después de 3 segundos
    }

    document.getElementById("copy").addEventListener("click", copyEmail);
</script>

<style>
    .content{
        display: flex;
        text-align: center;
        align-items: center;
        background-color: rgba(97, 97, 97, 0.084);
        color: rgb(140, 140, 140);
        border: 1px solid rgb(140, 140, 140);
        font-size: 18px;
        align-self: center;
        padding: 8px 15px;
        border-radius: 15px;
        box-shadow: 1px 3px 5px rgba(255, 255, 255, 0.2);
        gap: 10px;
        transition: .5s;
        cursor: pointer;
    }
    .content:hover{
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
        transition: .5s;
        box-shadow: 3px 5px 7px rgba(255, 255, 255, 0.4);
    }
    .copy-button{
        background: none;
        border: none;
        padding: 0;
        display: flex;
    }
    .email-text{
        font-size: 18px;
    }

    .notification {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        background-color: var(--background-color2);
        color: white;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        font-size: 16px;
        z-index: 1000;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.5s ease;
    }

    .hidden {
        opacity: 0;
    }

    .notification p {
        margin: 0;
        font-weight: bold;
    }

    .notification:not(.hidden) {
        opacity: 1;
        pointer-events: all;
    }


    @media (min-width:980px) and (max-width: 1200px) {
        .content{
            padding: 5px 12px;
        }
        .email-text{
            font-size: 15px;
        }
    }
    @media (min-width: 500px) and (max-width: 980px) {
        .content{
            padding: 5px 12px;
        }
        .email-text{
            font-size: 15px;
        }
    }
    @media (max-width: 500px) {
        .email-text{
            font-size: 12px;
        }
    }
</style>
