---
const {list,select,tittleSection,logo} = Astro.props
---

<section id={select}>
    <div class="position"></div>
    <h4><i class={logo}></i>{tittleSection}</h4>
    {list.map(({tittle,time,text,img,dir}) => (
        <article>
            <div class="description">
                <div class="time"><div class="circle"></div>{time}</div>
                <h5>{tittle}</h5>
                <p>{text}</p>
            </div>
            <a target="_blank" href={dir}><img loading="lazy" src={img} alt={tittle}></a>
        </article>
    ))}
</section>

<style>
    section{
        position: relative;
        margin: 10dvh 0 0 0;
    }
    .position{
        position: absolute;
        top: -100px;
    }
    img {
        height: 120px; 
        padding: 5px;
        image-rendering: optimizeSpeed;
        width: 120px;
        object-fit: cover;
        border-radius: 15px; 
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3); 
        transition: transform 0.3s ease, box-shadow 0.3s ease; 
        background-color: rgb(255, 255, 255);
    }

    img:hover {
        transform: scale(1.05); 
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.4); 
    }
    .time{
        position: relative;
        color: grey;
    }   
    .circle{
        position: absolute;
        width: 15px;
        height: 15px;
        background-color: rgb(254, 254, 254);
        border-radius: 50%;
        left: -23.5px;
        top: 50%;
        transform: translateY(-50%);
    }
    section{
        width: 100%;
    }
    h4{
        color: var(--primary-color);
        font-size: 30px;
        display: flex;
        gap: 15px;
        margin: 20px 0;
        align-items: center;
    }
    article{
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }
    h5{
        font-size: 20px;
        color: var(--secondary-color);
    }
    .description{
        display: flex;
        flex-direction: column;     
        border-left: 2px solid var(--accent-color);
        padding-left: 15px;
        gap: 10px;
        font-size: 17px;
        padding-bottom: 20px;
        width: 70%;
        padding-top: 10px;
        height: fit-content;
    }
    @media (max-width: 980px){
		img{
            width: 50px;
            height: 50px;
        }
        h4{
            font-size: 25px;
        }
        h5{
            font-size: 15px;
        }
        p{
            font-size: 13px;
        }

	}
</style>