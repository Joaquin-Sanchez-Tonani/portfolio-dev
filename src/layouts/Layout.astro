---
interface Props {
	title: string;
}
import MenuActive from '../components/menuActive.astro';
import Header from '../components/Header.astro';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Abel&family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Dancing+Script:wght@400..700&family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Onest:wght@100..900&family=Oxanium:wght@200..800&family=Varela+Round&display=swap" rel="stylesheet">
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>			
		<div class="fullscreen-bg">
			<Header/>
			<MenuActive/>
			<slot />
			<footer>
				<div>
					<h4>Contact</h4>
					<ul>
						<a aria-label="go linkedin page" target="_blank" href="https://www.linkedin.com/in/joaquin-dario-sanchez-tonani-ba7117272/"><li><i class="fa-brands fa-linkedin"></i></li></a>
						<a aria-label="go github page" target="_blank" href="https://github.com/Joaquin-Sanchez-Tonani"><li><i class="fa-brands fa-github"></i></li></a>
					</ul>
				</div>
				<p class="email">joaquinsancheztonani15@gmail.com</p>
				<p>Â© 2024 Joaquin Sanchez Tonani. No rights reserved.</p>
			</footer>
		</div>
	</body>
</html>
<script src="https://kit.fontawesome.com/dcac57140d.js" crossorigin="anonymous"></script>
<style is:global>
	:root {
		--primary-color: #f2ecff;
		--secondary-color: #00c896;
		--accent-color: #3a3a3a;
		--background-color: #19055a;
		--background-color2: rgba(85, 84, 138, 0.197);
		--ellipse-color: #1515159e;
		--link-color: #2980b9;
		--normal-text: rgb(171, 171, 171);
	}
	section{
		scroll-margin-top: 80px;
	}
	i{
        display: flex;
        align-self: center;
        font-size: 20px;
        color: var(--secondary-color);
        transition: .5s;
    }
	.fullscreen-bg {
		position: absolute;
		top: 0;
		z-index: -2;
		height:min-content;
		width: 100%;
		background-color: #1a1a1a; 
		background: radial-gradient(
			ellipse 40% 40% at 50% 30%,
			var(--background-color),
			var(--ellipse-color)
		);
	}

	
	html {
		scroll-behavior: smooth;
		font-family: "Nunito", sans-serif;
		font-optical-sizing: auto;
		font-weight: <weight>;
		font-style: normal;
		user-select: none;
	}
	body{
		margin: 0;
		background: var(--background-color);
	}
	a{
		color: white;
		list-style: none;
		text-decoration: none;
		padding: 0;
	}
	h1,h2,h3,h4,h5,h6{
        margin: 0;
    }
	code {
	}
	p{
		margin: 0;
	}
	footer{
		margin: 10dvh 0 0 0;
		display: flex;
		justify-content: center;
		align-items: center;
		color: white;
		height: 200px;
		background-color: rgba(153, 154, 155, 0.407);
		backdrop-filter: blur(5px); 
		background: rgba(118, 118, 118, 0.052);
		flex-direction: column;
		text-align: center;
		gap: 10px;
	}
	footer ul{
		display: flex;
		align-items: center;
		justify-content: center;
		list-style: none;
		padding: 0;
		margin: 0;
		gap: 20px;
	}
	.email{
		color: #a1a1a1;
		user-select:text;
	}
	footer h4{
		font-weight: 600;
		letter-spacing: 2px;
	}
	footer div{
		display: flex;
		flex-direction: column;
		gap: 10px;
	}
	@media (min-width: 980px) and (max-width: 1200px){
		i{
			font-size: 17px;
		}
	}
	@media (min-width: 500px) and (max-width: 980px) {
        i{
			font-size: 15px;
		}
    }
	@media (max-width: 500px){
		i{
			font-size: 12px;
		}
	}
</style>
